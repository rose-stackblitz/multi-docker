{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name" : "client",
      "image": "roseroserose/multi-client",
      "hostname" : "client",
      "essential": false
    },
    {
      "name" : "server",
      "image": "roseroserose/multi-server",
      "hostname" : "api",
      "essential": false
    },
    {
      "name" : "worker",
      "image": "roseroserose/multi-worker",
      "hostname" : "worker",
      "essential": false
    },
    {
      "name" : "nginx",
      "image": "roseroserose/multi-nginx",
      "hostname" : "nginx",
      "essential": true,
      "portMappings": [
        {"hostPort" : 80,
      "containerPort" : 80
    }
      ],
      "links": ["client", "server"]
    }
  ]
}
